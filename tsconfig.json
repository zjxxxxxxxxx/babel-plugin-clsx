{
  "compilerOptions": {
    "strict": true, 
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["global.d.ts", "scripts", "src"],
  "exclude": ["node_modules", "test", "examples"]
}
