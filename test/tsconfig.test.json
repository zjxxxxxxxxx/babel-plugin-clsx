{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "typeRoots": ["node_modules", "node_modules/@types"],
    "types": ["@jest/globals"],
    "paths": {
      "react": ["../jsx/react"],
      "react/jsx-runtime": ["../jsx/jsx-runtime"],
      "react/jsx-dev-runtime": ["../jsx/jsx-dev-runtime"]
    },
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "incremental": true,
    "disableSizeLimit": true,
    "allowSyntheticDefaultImports": true
  }
}
